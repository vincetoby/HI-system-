              <input type="text" placeholder="fullname" name="contact" />
            </div>
            <div class="input-box">
              <label for="name">Email</label>
              <input type="text" placeholder="email" name="email" />
            </div>
            <div class="input-box">
              <label for="vendor">vendor</label>
              <input type="text" placeholder="fullname" name="vendor" />
            </div>
            <div class="input-box">
              <label for="filename">Photo</label>
